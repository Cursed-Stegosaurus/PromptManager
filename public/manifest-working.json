{
  "manifest_version": 3,
  "name": "Prompt Library",
  "version": "1.0.0",
  "description": "Find, clone, and insert reusable prompts. Optional Google Drive backup and encryption.",
  "permissions": [
    "storage",
    "sidePanel",
    "scripting",
    "activeTab",
    "contextMenus",
    "clipboardWrite",
    "alarms"
  ],
  "background": {
    "service_worker": "background-enhanced.js"
  },
  "side_panel": {
    "default_path": "sidepanel/index.html"
  },
  "options_page": "options/options.html",
  "action": {
    "default_title": "Prompt Library"
  },
  "icons": {
    "16": "assets/icons/16.png",
    "32": "assets/icons/32.png",
    "48": "assets/icons/48.png",
    "128": "assets/icons/128.png"
  }
}
